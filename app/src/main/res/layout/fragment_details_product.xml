<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNombre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        style="@style/RecyclerViewItemText"/>

    <TextView
        android:id="@+id/tvEstadoStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPrecio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        style="@style/RecyclerViewItemText"
        android:textColor="@color/colorStockEnStock"/>

    <ImageView
        android:id="@+id/imageViewProducto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tvEstadoStock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btnFavorito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewProducto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="AÃ±adir a favoritos"
        android:drawableLeft="@drawable/ic_favoritos"/>

    <Button
        android:id="@+id/btnAgregarAlCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnFavorito"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Pedir Stock"/>

</RelativeLayout>
